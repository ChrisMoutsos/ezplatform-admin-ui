{% trans_default_domain 'locationview' %}

<div
    class="modal fade ez-modal--reschedule-publish-later ez-reschedule-publish-later-modal"
    id="reschedule-publish-later-modal"
    tabindex="-1"
    role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reschedule content</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <svg class="ez-icon ez-icon--medium" aria-hidden="true">
                        <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#discard"></use>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <span class="ez-reschedule-publish-later-modal__input-label">Date and Time</span>
                <input class="form-control flatpickr flatpickr-date-input flatpickr-input ez-reschedule-publish-later-modal__input" readonly="readonly" type="text">
            </div>
            <div class="modal-footer c-popup__footer">
                <button type="button" class="btn btn-dark ez-btn--cancel-reschedule" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary font-weight-bold ez-btn--confirm-reschedule" disabled>Confirm reschedule</button>
            </div>
        </div>
    </div>
</div>
